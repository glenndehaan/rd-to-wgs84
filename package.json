{
  "name": "rd-to-wgs84",
  "version": "2.0.0",
  "description": "A simple converter for the dutch coordinate system to the generic WGS84 GPS coordinates",
  "main": "./src/cjs.js",
  "module": "./src/esm.mjs",
  "scripts": {
    "start": "node ./demo/cjs.js && node ./demo/esm.mjs",
    "lint": "eslint -c ./package.json ./src"
  },
  "author": {
    "name": "Glenn de Haan",
    "email": "glenn@dehaan.cloud",
    "url": "https://glenndehaan.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glenndehaan/rd-to-wgs84.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ]
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "eslintIgnore": [
    "*.test.js"
  ],
  "devDependencies": {
    "eslint": "^8.57.0"
  },
  "types": "./src/index.d.ts"
}
